{
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/{,!(node_modules)/**!(templates)}/*test.js"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}